<div id="usermenu" class="dropdown is-hoverable is-right">
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
      <%= fas("user-circle") %>
      <span><%= @user.name %></span>
      <%= fas("angle-down", "is-small") %>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-menu" role="menu">
    <div class="dropdown-content">
      <a href="<%= Routes.user_path(@conn, :settings) %>" class="dropdown-item">
        Settings
      </a>
      <%# <hr class="dropdown-divider"> %>
      <a href="<%= Routes.user_path(@conn, :signout) %>" class="dropdown-item">
        Sign Out
      </a>
    </div>
  </div>
</div>