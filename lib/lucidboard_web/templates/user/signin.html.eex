<div class="jumbotron">
  <%= if @user do %>
    <h2>Welcome, <%= @user.name %>!</h2>
    <img src="<%= @user.avatar %>" class="img-circle"/>
    <%= button "Logout", to: auth_path(@conn, :delete), method: :post, class: "btn btn-danger" %>
    <br>
  <% else %>
    <a class="btn btn-primary btn-lg" href="/auth/github">
      <i class="fa fa-github"></i>
      Sign in with GitHub
    </a>

    <%= submit "Sign in" %>
  <% end %>
</div>
